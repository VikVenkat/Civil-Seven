  </tr>

<% @shirts.each do |shirt| %>
  <tr>
    <td><%= shirt.style_id %></td>
	<td><%= shirt.fabric %></td>
	<td><%= shirt.price %></td>
  
    <td><%= link_to 'Show', shirt %></td>
    <td><%= link_to 'Edit', edit_shirt_path(shirt) %></td>
    <td><%= link_to 'Destroy', shirt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

